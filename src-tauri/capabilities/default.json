{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "settings"],
  "permissions": [
    "path:default",
    "event:default",
    "event:allow-listen",
    "window:default",
    "window:allow-create",
    "window:allow-show",
    "window:allow-is-fullscreen",
    "window:allow-set-fullscreen",
    "window:allow-set-focus",
    "window:allow-is-focused",
    "window:allow-start-dragging",
    "window:allow-is-resizable",
    "webview:default",
    "webview:allow-create-webview",
    "webview:allow-create-webview-window",
    "webview:allow-set-webview-zoom",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "menu:default",
    "menu:allow-new",
    "menu:allow-set-as-app-menu",
    "menu:allow-create-default",
    "menu:allow-items",
    "menu:allow-append",
    "menu:allow-insert",
    "menu:allow-get",
    "menu:allow-remove",
    "menu:allow-remove-at",
    "menu:allow-text",
    "theme:allow-set-theme"
  ]
}
